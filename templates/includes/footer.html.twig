<div class="main-footer">
    {% if page.footer_first or page.footer_middle or page.footer_last %}
      <footer class="row columns">
        <div class="footer-bg">
          {% if page.footer_first %}
          <div id="footer-first" class="small-12 medium-4 large-4 columns">
            {{ page.footer_first }}
          </div>
          {% endif %}

          {% if page.footer_middle %}
            <div id="footer-middle" class="small-12 medium-4 large-4 columns">
              {{ page.footer_middle }}
            </div>
          {% endif %}
          {% if page.footer_last %}
            <div id="footer-last" class="small-12 medium-4 large-4 columns">
              {{ page.footer_last }}
            </div>
          {% endif %}
        </div>
      </footer>
    {% endif %}
    <div class="row">
      <div class="large-12 columns">
        <div class="copyright-footer">
          <p class="text-center">&copy; {{ "now"|date('Y') }} <a href="/">{{ site_name }}</a> {{ 'All rights reserved.'|t }}</p>
          <div id="back-to-top" class="float-right">
              <a href="#top" aria-label="Go to top"><i class="fa fa-angle-up"></i></a>
          </div>
        </div>
      </div>
    </div>
</div>
